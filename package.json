{
  "name": "jsxtable",
  "version": "0.0.2",
  "license": "MIT",
  "peerDependencies": {
    "react": "^16.8.2",
    "react-dom": "^16.8.6"
  },
  "main": "lib/Table.jsx",
  "scripts": {
    "build:clean": "shx rm -rf lib && mkdir lib",
    "build:flow": "flow-copy-source -v -i '**test**' -i '**setupTests**' src lib",
    "build:transpile": "cross-env NODE_ENV=production babel src/Table.jsx --out-file lib/Table.jsx",
    "build": "yarn build:clean && yarn build:transpile && yarn build:flow",
    "test": "jest",
    "flow": "flow stop && flow start && flow"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "jest": {
    "transform": {
      "^.+\\.jsx?$": "./config/jest/babelTransform.js"
    },
    "setupFiles": [
      "./config/jest/setupTests.js"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "react-app"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "@babel/cli": "^7.4.4",
    "@babel/core": "^7.4.4",
    "@babel/preset-env": "^7.4.4",
    "babel-jest": "^24.8.0",
    "babel-preset-react-app": "^9.0.0",
    "cross-env": "^5.2.0",
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "flow-bin": "^0.93.0",
    "flow-copy-source": "^2.0.4",
    "flow-remove-types": "^1.2.3",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "prettier": "1.16.4",
    "pretty-quick": "^1.10.0",
    "react": "^16.8.2",
    "react-dom": "^16.8.6",
    "react-scripts": "^3.0.1",
    "react-test-renderer": "^16.8.6",
    "shx": "^0.3.2"
  }
}
