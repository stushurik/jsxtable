{
  "name": "rtable",
  "version": "0.0.0",
  "peerDependencies": {
    "react": "^16.8.2",
    "react-dom": "^16.8.6"
  },
  "main": "lib/Table.jsx",
  "scripts": {
    "build:clean": "shx rm -rf lib && mkdir lib",
    "build:removeTypes": "flow-remove-types -p src/Table.jsx > lib/Table.jsx",
    "build:flow": "flow-copy-source -v -i '**test**' -i '**setupTests**' src lib",
    "build": "yarn build:clean && yarn build:removeTypes && yarn build:flow",
    "test": "react-scripts test",
    "flow": "flow stop && flow start && flow"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "src/**/*.{js,jsx,ts,tsx,json,css,scss,md}": [
      "prettier --single-quote --write",
      "git add"
    ]
  },
  "eslintConfig": {
    "extends": [
      "eslint:recommended",
      "react-app"
    ]
  },
  "browserslist": [
    ">0.2%",
    "not dead",
    "not ie <= 11",
    "not op_mini all"
  ],
  "devDependencies": {
    "enzyme": "^3.9.0",
    "enzyme-adapter-react-16": "^1.11.0",
    "eslint-plugin-jest": "^22.3.0",
    "eslint-plugin-prettier": "^3.0.1",
    "flow-bin": "^0.93.0",
    "flow-copy-source": "^2.0.4",
    "flow-remove-types": "^1.2.3",
    "husky": "^1.3.1",
    "lint-staged": "^8.1.4",
    "prettier": "1.16.4",
    "pretty-quick": "^1.10.0",
    "react": "^16.8.2",
    "react-dom": "^16.8.6",
    "react-scripts": "^3.0.1",
    "react-test-renderer": "^16.8.6",
    "shx": "^0.3.2"
  }
}
